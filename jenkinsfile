node {  
    stage("Build") { 
        steps{
          echo 'building the application '
        }
    }
    stage("Test") { 
        steps{
          echo 'Testing the application '
        } 
    }
    stage("Deploy") { 
        steps{
          echo 'Deploying the application '
        } 
    }
    posts{
    
    always {
    //send email 
    docker-compose down
    }
    
    
    success {
    //when sucess 
    }
    
    
    failure {
    //when failed
    }
    
    }
}
